<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.text.TextUtils" />
        <import type="me.zhanghai.android.douya.R" />
        <import type="me.zhanghai.android.douya.util.ContextExtensionsKt" />
        <variable name="viewModel" type="me.zhanghai.android.douya.timeline.TimelineViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <me.zhanghai.android.douya.ui.MaterialSwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:progressOffset="@{ContextExtensionsKt.getDimensionPixelSizeByAttr(context, R.attr.actionBarSize)}"
            app:progressOffsetSystemWindowInsets="@{true}"
            app:refreshing="@={viewModel.refreshing}"
            app:onRefresh="@{() -> viewModel.refresh()}">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/timelineRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/list_card_horizontal_margin_half"
                android:paddingEnd="@dimen/list_card_horizontal_margin_half"
                android:paddingTop="@dimen/list_card_vertical_margin_half"
                android:paddingBottom="@dimen/list_card_vertical_margin_half"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideOverlay"
                app:paddingLeftSystemWindowInsets="@{true}"
                app:paddingRightSystemWindowInsets="@{true}"
                app:paddingTopSystemWindowInsets="@{true}"
                app:paddingBottomSystemWindowInsets="@{true}"
                app:hasFixedSize="@{true}" />
        </me.zhanghai.android.douya.ui.MaterialSwipeRefreshLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/inbox_icon_control_normal_200dp"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:text="@string/timeline_empty"
            app:layout_marginLeftSystemWindowInsets="@{true}"
            app:layout_marginRightSystemWindowInsets="@{true}"
            app:layout_marginTopSystemWindowInsets="@{true}"
            app:layout_marginBottomSystemWindowInsets="@{true}"
            app:visibleOrGone="@{viewModel.empty}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/cloud_off_icon_control_normal_200dp"
            android:gravity="center_horizontal"
            android:text="@{viewModel.error}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_marginLeftSystemWindowInsets="@{true}"
            app:layout_marginRightSystemWindowInsets="@{true}"
            app:layout_marginTopSystemWindowInsets="@{true}"
            app:layout_marginBottomSystemWindowInsets="@{true}"
            app:visibleOrGone="@{!TextUtils.isEmpty(viewModel.error)}" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_marginLeftSystemWindowInsets="@{true}"
            app:layout_marginRightSystemWindowInsets="@{true}"
            app:layout_marginTopSystemWindowInsets="@{true}"
            app:layout_marginBottomSystemWindowInsets="@{true}"
            app:visibleOrGoneAnimated="@{viewModel.loading}" />
    </FrameLayout>
</layout>
